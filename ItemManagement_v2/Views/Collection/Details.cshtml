@model Collection

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <hr />

    <div class="container">
        <table class="table">
                <tr>
                    <th>
                        Author
                    </th>
                    <td>
                        @Model.IdentityUser.UserName
                    </td>
                </tr>
            <tr>
                <th>
                    Name
                </th>
                <td>
                    @Model.Name
                </td>
            </tr>
            <tr>
                <th>
                    Topic
                </th>
                <td>
                    @Model.Topic
                </td>
            </tr>
            <tr>
                <th>
                    Description
                </th>
                <td>
                    @Model.Description
                </td>
            </tr>

        </table>
        
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="img-fluid">
                <img src="data:image;base64,@Model.Image" class="card-img-top" alt="collectionImage_@Model.Id">
            </div>
        </div>
    </div>
    <div class="py-5">
        <div class="container-fluid p-4">
            <h2> Items included</h2>
            <hr>
            <div class="row hidden-md-up">
                @foreach (var item in ViewBag.Items)
                {
                    <div class="col-md-4">
                        <div class="card" style="width: 18rem;">
                            <div class="card-block">
                                <img src="data:image;base64,@item.Image" class="card-img-top fit-image" alt="..." height="250">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Name</h5>

                                    <p class="card-text">@item.Tag</p>
                                    <a href="/item/details?id=@item.Id" class="btn btn-primary"> Show details </a>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
        </div>
    </div>

</div>

<div class="navbar navbar-light bg-light">
    <div class="container">
        <a class="btn-link navbar" href="/collection/index"> Go back </a>
    </div>
</div>


